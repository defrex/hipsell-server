<script id="listingPage" type="text/html">
<div class="listing clearfix">

    <div id="listing-image">
        <img src="{{ MEDIA_URL }}{{ photo }}" />
    </div>

    <div id="listing-sidebar">
        
        <a href="http://maps.google.com/maps?ll={{ latitude }},{{ longtitude }}&z=16">
            <img class="map" src="http://maps.google.com/maps/api/staticmap?center={{ latitude }},{{ longtitude }}&zoom=14&size=340x200&sensor=false" />
        </a>

        <div id="listing-offerbar" class="clearfix">
            <div class="listing-obi asking">
                <div class="listing-obi-title">Asking Price</div>
                <div class="listing-obi-value">
                    ${{ price }}
                </div>
            </div>
            <div class="listing-obi best-offer">
                <div class="listing-obi-title">Best Offer</div>
                <div class="listing-obi-value">
                    $TODO
                </div>
            </div>
            <div class="listing-obi date">
                <div class="listing-obi-title">Minutes Ago</div>
                <div class="listing-obi-value">
                    {{ created_on }}
                </div>
            </div>
        </div>
        <a href="#" id="offer" class="button">Make an offer</a>
        <a href="#" id="question" class="button">Ask a Question</a>

        <div id="listing-description">
           {{ description }}
        </div>
    </div>

</div>
</script>